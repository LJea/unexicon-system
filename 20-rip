#!/bin/bash
#
# /etc/NetworkManager/dispatcher.d/20-rip
# /etc/ppp/ip-up.d/20-rip.sh
# /etc/ppp/ip-down.d/20-rip.sh
# /etc/ppp/ipv6-up.d/20-rip.sh
# /etc/ppp/ipv6-down.d/20-rip.sh
# /usr/lib/dhcpcd/dhcpcd-hooks/20-rip
#
# This script is for interfaces being established by NetworkManager
# and those that are being established by PPTPD or PPPOED.  We need
# to add these interfaces to the routing daemon but we restrict them
# to having routing information for the unexicon subnetwork of
# 10.55.7.0/24 for PPTPD.  NetworkManager establishes the normal
# interfaces and PPTP or PPPOE client associations, but PPTPD and
# PPPOED establish the server associations.
# 

unit=ripd
unit_dir=/run/nm-unexicon/$unit
[ -d $unit_dir ] || mkdir -p -- $unit_dir

case "$0" in
(./*|../*|[^./]*)   dispatcher="$(pwd)/$0" ;;
(*)		    dispatcher="$0" ;;
esac

prog=$(basename $0)
[ "$prog" != 'dhcpcd-run-hooks' ] || prog=dhcpcd

if [ "$prog" != dhcpcd ]; then
syslog ()
{
	local level="$1"
	[ -n "$level" ] && shift
	if [ -n "$*" ]; then
		if type logger >/dev/null 2>&1; then
			logger -i -t $prog -p daemon.${level:-info} "${interface:+$interface: }$*"
		fi
	fi
}
else
	syslog debug "Running dhcpcd-hook for unit $unit..."
fi

unit_rebuild_config ()
{
	local file temp save conf ifiles nfiles bfiles pfiles
	syslog debug "Rebuilding configuration."
	conf=/etc/quagga/${unit}.conf
	save="$unit_dir/$(basename $conf).save"
	ifiles=$(find $unit_dir -name '*_interface' 2>/dev/null)
	nfiles=$(find $unit_dir -name '*_network'   2>/dev/null)
	bfiles=$(find $unit_dir -name '*_neighbor'  2>/dev/null)
	pfiles=$(find $unit_dir -name '*_passive'   2>/dev/null)
	if [ -n "$ifiles$nfiles$bfiles$pfiles" ]; then
		if [ ! -e $save ]; then
			if [ -e $conf ]; then
				cp -pf -- $conf $save
				rm -f -- $conf
			else
				touch $save
				chmod 0700 $save
				chown quagga.quagga $save
			fi
		fi
		temp=$(mktemp "$unit_dir/$(basename $conf).XXXXXX") || return
		chmod --reference=$save $temp
		chown --reference=$save $temp
		{
			cat<<-EOF
			! $conf
			!
			! $(basename $conf) -- ${unit} configuration file
			!
			! Generated by ${unit} hook script.
			! Any manual changes will be lost at next network event.
			!
			hostname ${unit}
			password zebra
			enable password zebra
			!
			log syslog
			!
			EOF
			[ -z "$ifiles" ] || cat $ifiles|awk '{if($0&&!($0 in seen)){seen[$0]=1;print$0}}'
			cat<<-'EOF'
			!
			router rip
			EOF
			[ -z "$nfiles" ] || cat $nfiles|awk '{if($0&&!($0 in seen)){seen[$0]=1;print$0}}'
			[ -z "$bfiles" ] || cat $bfiles|awk '{if($0&&!($0 in seen)){seen[$0]=1;print$0}}'
			[ -z "$pfiles" ] || cat $pfiles|awk '{if($0&&!($0 in seen)){seen[$0]=1;print$0}}'
			cat<<-EOF
			 redistribute kernel
			 redistribute static
			 redistribute connected
			 redistribute ospf
			 redistribute bgp
			 default-information originate
			!
			line vty
			 no exec-timeout
			!
			! vim: ft=uil tw=64 com=\:!!,\:! fo+=tcqlorn
			EOF
		}>$temp
		if [ -e $conf ]; then
			if ! diff $temp $conf &>/dev/null; then
				cp -pf -- $temp $conf
				systemctl reload-or-try-restart $unit
			fi
		else
			cp -pf -- $temp $conf
			systemctl reload-or-restart $unit
		fi
		rm -f -- $temp
	else
		systemctl stop $unit
		if [ -s $save ]; then
			cp -pf -- $save $conf
		else
			rm -f -- $conf
		fi
		rm -f -- $save
	fi
}

unit_remove ()
{
	local f existing=
	for f in $unit_dir/${1}_*; do
		[ -e $f ] || continue
		existing=yes
		break
	done
	if [ -n "$existing" ]; then
		rm -f -- $unit_dir/${1}_*
		unit_rebuild_config
	fi
}

unit_test_ipv4_addr ()
{
	case "$1" in
	0.*)					echo -n default		;; # 0/8
	10.41.0.*)				echo -n shared		;; # 10.41.0/24 (NM shared)
	10.55.4.*)				echo -n unxres		;; # 10.55.4/24 (Unexicon reserved)
	10.55.5.*)				echo -n pppoe		;; # 10.55.5/24 (PPPOE direct)
	10.55.6.*)				echo -n l2tp		;; # 10.55.6/24 (L2TP direct)
	10.55.7.*)				echo -n unexicon	;; # 10.55.7/24 (Unexicon VPN)
	10.*)					echo -n private		;; # 10/8
	127.*)					echo -n loopback	;; # 127.0/8
	169.254.*)				echo -n linklocal	;; # 169.254/16
	172.1[6-9].*|172.2[0-9].*|172.3[0-1].*)	echo -n private		;; # 172.16/12
	192.168.*)				echo -n private		;; # 192.168/16
	192.0.2.*)				echo -n reserved	;; # 192.0.2/24
	192.0.0.[0-7])				echo -n reserved	;; # 192.0.0/29
	22[4-9].*|23[0-9].*)			echo -n multicast	;; # 224/4 (224-239.)
	24[0-9].*|25[0-5].*)			echo -n reserved	;; # 240/4 (240-255.)
	24[0-7].*)				echo -n reserved	;; # 240/5 (240-247.)
	24[8-9].*|25[0-5].*)			echo -n reserved	;; # 248/5 (248-255.)
	*)					echo -n public		;;
	esac
}

unit_add ()
{
	local i addr iface passive scopes
	for addr in $3; do
		scopes="${scopes:+$scopes }$(unit_test_ipv4_addr $addr)"
	done
	syslog debug "Scopes are: '$scopes'"
	case " $scopes " in
	*" public "*)
		iface="$2"; passive= ;;
	*" unexicon "*)
		iface="$2"; passive= ;;
	*" l2tp "*|*" pppoe "*|*" unxres "*)
		iface="$2"; passive='no ' ;;
	*" private "*)
		iface="$2"; passive='no ' ;;
	*" linklocal "*)
		iface="$2"; passive='no ' ;;
	*" multicast "*|*" reserved "*|*" default "*|*)
		unit_remove $@; return 0 ;;
	esac
	if $4 ; then iface= ; fi
	syslog debug "iface='$iface' passive='$passive'"
	case "$iface" in
	"") unit_remove $@; return 0 ;;
	tun*|ppp*) passive= ;;
	esac
	echo "interface $iface"	>$unit_dir/${1}_interface
	echo " network $iface"	>$unit_dir/${1}_network
	echo " ${passive}passive-interface $iface" >$unit_dir/${1}_passive
	cat /dev/null >$unit_dir/${1}_neighbor
	for addr in $3; do
		subnet=$(echo $addr|awk '{if($1)print$1}')
		gatewy=$(echo $addr|awk '{if($2)print$2}')
		case "$(unit_test_ipv4_addr $addr)" in
		public)		[ -z "$subnet" ] || echo " network $subnet"  >>$unit_dir/${1}_network ;;
		private)	[ -z "$subnet" ] || echo " network $subnet"  >>$unit_dir/${1}_network ;;
		unxres)		[ -z "$subnet" ] || echo " network $subnet"  >>$unit_dir/${1}_network
				[ -z "$gatewy" ] || echo " neighbor $gatewy" >>$unit_dir/${1}_neighbor ;;
		pppoe)		[ -z "$subnet" ] || echo " network $subnet"  >>$unit_dir/${1}_network
				[ -z "$gatewy" ] || echo " neighbor $gatewy" >>$unit_dir/${1}_neighbor ;;
		l2tp)		[ -z "$subnet" ] || echo " network $subnet"  >>$unit_dir/${1}_network
				[ -z "$gatewy" ] || echo " neighbor $gatewy" >>$unit_dir/${1}_neighbor ;;
		unexicon)	[ -z "$subnet" ] || echo " network $subnet"  >>$unit_dir/${1}_network
				[ -z "$gatewy" ] || echo " neighbor $gatewy" >>$unit_dir/${1}_neighbor ;;
		shared)		[ -z "$subnet" ] || echo " network $subnet"  >>$unit_dir/${1}_network
				[ -z "$gatewy" ] || echo " neighbor $gatewy" >>$unit_dir/${1}_neighbor ;;
		default|loopback|linklocal|reserved|multicast|*) ;;
		esac
	done
	if [ -n "$5" ]; then
		subnet="$5/$6"
		case "$(unit_test_ipv4_addr $subnet)" in
		public)		echo " network $subnet" >>$unit_dir/${1}_network ;;
		private)	echo " network $subnet" >>$unit_dir/${1}_network ;;
		unxres)		echo " network $subnet" >>$unit_dir/${1}_network ;;
		pppoe)		echo " network $subnet" >>$unit_dir/${1}_network ;;
		l2tp)		echo " network $subnet" >>$unit_dir/${1}_network ;;
		unexicon)	echo " network $subnet" >>$unit_dir/${1}_network ;;
		shared)		echo " network $subnet" >>$unit_dir/${1}_network ;;
		default|loopback|linklocal|reserved|multicast|*) ;;
		esac
	fi
	for addr in $7; do
		case "$(unit_test_ipv4_addr $addr)" in
		private|unexicon)
			[ -z "$addr" ] || echo " neighbor $addr"    >>$unit_dir/${1}_neighbor
			;;
		esac
	done
	unit_rebuild_config
}

unit_nm_add ()
{
	local i addr addresses=
	for ((i=0;i<IP4_NUM_ADDRESSES;i++)); do
		eval "addr=\"$IP4_ADDRESS_$i\""
		addresses="${addresses:+$addresses }$addr"
	done
	unit_add "$1" "$DEVICE_IP_IFACE" "$addresses" "$DHCP4_IFWIRELESS" "$DHCP4_NETWORK_NUMBER" "$DHCP4_SUBNET_CIDR" "$DHCP4_ROUTERS"
}

unit_nm_rmv ()
{
	unit_remove $@
}

unit_nm_cha ()
{
	if [ -n "$DEVICE_IP_IFACE" ]; then
		unit_nm_add $@
	else
		unit_nm_rmv $@
	fi
}

# Network manager up command
unit_nm_up ()
{
	syslog debug "Responding to NM up command."
	unit_nm_add $@
}

# Network manager down command
unit_nm_down ()
{
	syslog debug "Responding to NM down command."
	unit_nm_rmv $@
}

# Network manager vpn-up command
unit_nm_vpn_up ()
{
	syslog debug "Responding to NM vpn-up command."
	unit_nm_add $@
}

# Network manager vpn-down command
unit_nm_vpn_down ()
{
	syslog debug "Responding to NM vpn-down command."
	unit_nm_rmv $@
}

# Network manager dhcp4-change command
unit_nm_dhcp4_change ()
{
	syslog debug "Responding to NM dhcp4-change command."
	unit_nm_cha $@
}

# Network manager dhcp6-change command
unit_nm_dhcp6_change ()
{
	syslog debug "Responding to NM dhcp6-change command."
	unit_nm_cha $@
}

# Network manager hostname command
unit_nm_hostname ()
{
	syslog debug "Responding to NM hostname command."
	:
}

unit_ppp_add ()
{
	unit_add $@
}

unit_ppp_rmv ()
{
	unit_remove $@
}

# PPP daemon ip-up command
unit_ppp_ip_up ()
{
	local wireless=0 number= cidr= neighbor= no=
	case "$4" in
	(10.55.7.[123]) number=10.55.7.0; cidr=24; no='no ' ;;
	(10.55.6.[123]) number=10.55.6.0; cidr=24; no='no ' ;;
	(10.55.5.[123]) number=10.55.5.0; cidr=24; no='no ' ;;
	(10.55.4.[123]) number=10.55.4.0; cidr=24; no='no ' ;;
	esac
	case "$5" in
	(10.55.7.[123]) number=10.55.7.0; cidr=24; no=   ;;
	(10.55.6.[123]) number=10.55.6.0; cidr=24; no=   ;;
	(10.55.5.[123]) number=10.55.5.0; cidr=24; no=   ;;
	(10.55.4.[123]) number=10.55.4.0; cidr=24; no=   ;;
	esac
	echo "interface $1"		    >$unit_dir/${1}_interface
	echo " network $1"		    >$unit_dir/${1}_network
	echo " ${no}passive-interface $1"   >$unit_dir/${1}_passive;
	[ -z "$number" ] || \
	echo " network $number/$cidr"	   >>$unit_dir/${1}_network
	[ -z "$5" ] || \
	echo " neighbor $5"		    >$unit_dir/${1}_neighbor
	uint_rebuild_config
}

# PPP daemon ip-down command
unit_ppp_ip_down ()
{
	unit_ppp_rmv $@
}

# PPP daemon ipv6-up command
unit_ppp_ipv6_up ()
{
	unit_ppp_add "$1" "$1" "$4" "0" "" "" "$5"
}

# PPP daemon ipv6-down command
unit_ppp_ipv6_down ()
{
	unit_ppp_rmv $@
}

unit_dhcp_add ()
{
	syslog debug "Responding to DHCP add command (reason: $reason)"
	unit_add "$1" "$1" "$new_ip_address" "$ifwireless" "$network_number" "$subnet_cidr" "$(echo $new_routers|sed 's/,/ /g')"
}

unit_dhcp_rmv ()
{
	syslog debug "Responding to DHCP rmv command (reason: $reason)"
	unit_remove $@
}

# DHCP client daemon hook command
unit_dhcpcd_hook ()
{
	case "$reason" in
	(PREINIT|CARRIER|INFORM|BOUND|RENEW|REBIND|REBOOT|IPV4LL|STATIC|3RDPARTY|TIMEOUT)
		unit_dhcp_add $interface ;;
	(EXPIRE|RELEASE|NAK|NOCARRIER|FAIL|STOP)
		unit_dhcp_rmv $interface ;;
	(DUMP|TEST|ROUTERADVERT)
		;;
	esac
}

# We just put this script in /etc/NetworkManager/dispatcher.d
# and then symbolic link it from /etc/ppp/ip{v6}-{up|down}.d/
# directories.  So, we decide what to do based on how we were
# called.

syslog debug "Dispatcher for $unit invoked..."

case "$dispatcher" in
	(*/dispatcher.d/*)
		syslog debug "Invoked as dispatcher."
		case "$2" in
		(up)		unit_nm_up		$@ ;;
		(down)		unit_nm_down		$@ ;;
		(vpn-up)	unit_nm_vpn_up		$@ ;;
		(vpn-down)	unit_nm_vpn_down	$@ ;;
		(dhcp4-change)	unit_nm_dhcp4_change	$@ ;;
		(dhcp6-change)	unit_nm_dhcp6_change	$@ ;;
		(hostname)	unit_nm_hostname	$@ ;;
		esac
		;;
	(*/ip-up.d/*)		unit_ppp_ip_up		$@ ;;
	(*/ip-down.d/*)		unit_ppp_ip_down	$@ ;;
	(*/ipv6-up.d/*)		unit_ppp_ipv6_up	$@ ;;
	(*/ipv6-down.d/*)	unit_ppp_ipv6_down	$@ ;;
	(*/dhcpcd-run-hooks)	unit_dhcpcd_hook	$@ ;;
esac

syslog debug "...done dispatcher for $unit."


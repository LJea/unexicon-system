#!/bin/bash
#
# /etc/NetworkManager/dispatcher.d/20-ospf6
# /etc/ppp/ip-up.d/20-ospf6.sh
# /etc/ppp/ip-down.d/20-ospf6.sh
# /etc/ppp/ipv6-up.d/20-ospf6.sh
# /etc/ppp/ipv6-down.d/20-ospf6.sh
# /usr/lib/dhcpcd/dhcpcd-hooks/20-ospf6
#
# This script is for interfaces being established by NetworkManager
# and those that are being established by PPTPD or PPPOED.  We need
# to add these interfaces to the routing daemon but we restrict them
# to having routing information for the unexicon subnetwork of
# 10.55.7.0/24 for PPTPD.  NetworkManager establishes the normal
# interfaces and PPTP or PPPOE client associations, but PPTPD and
# PPPOED establish the server associations.
#

unit=ospf6d
unit_dir=/run/nm-unexicon/$unit
[ -d $unit_dir ] || mkdir -p -- $unit_dir

case "$0" in
(./*|../*|[^./]*)   dispatcher="$(pwd)/$0" ;;
(*)		    dispatcher="$0" ;;
esac

prog=$(basename $0)
[ "$prog" != 'dhcpcd-run-hooks' ] || prog=dhcpcd

syslog ()
{
	local level="$1"
	[ -n "$level" ] && shift
	if [ -n "$*" ]; then
		if type logger >/dev/null 2>&1; then
			logger -i -t $prog -p daemon.${level:-info} "${interface:+$interface: }$*"
		fi
	fi
}

unit_rebuild_config ()
{
	local file temp save conf ifiles nfiles afiles pfiles
	syslog debug "Rebuilding configuration."
	conf=/etc/quagga/${unit}.conf
	save="$unit_dir/$(basename $conf).save"
	ifiles=$(find $unit_dir -name '*_interface' 2>/dev/null)
	nfiles=$(find $unit_dir -name '*_network'   2>/dev/null)
	afiles=$(find $unit_dir -name '*_area'	    2>/dev/null)
	pfiles=$(find $unit_dir -name '*_passive'   2>/dev/null)
	if [ -n "$ifiles$nfiles$afiles$pfiles" ]; then
		if [ ! -e $save ]; then
			if [ -e $conf ]; then
				cp -pf -- $conf $save
				rm -f -- $conf
			else
				touch $save
				chmod 0700 $save
				chown quagga.quagga $save
			fi
		fi
		temp=$(mktemp "$unit_dir/$(basename $conf).XXXXXX") || return
		chmod --reference=$save $temp
		chown --reference=$save $temp
		{
			cat<<-EOF
			! $conf
			!
			! $(basename $conf) -- ${unit} configuration file
			!
			! Generated by ${unit} hook script.
			! Any manual changes will be lost at next network event.
			!
			hostname ${unit}
			password zebra
			enable password zebra
			!
			log syslog
			!
			EOF
			[ -z "$ifiles" ] || cat $ifiles
			cat<<-'EOF'
			!
			router ospf6
			 no ospf6 router-id
			EOF
			[ -z "$nfiles" ] || cat $nfiles|awk '{if($0&&!($0 in seen)){seen[$0]=1;print$0}}'
			[ -z "$afiles" ] || cat $afiles|awk '{if($0&&!($0 in seen)){seen[$0]=1;print$0}}'
			[ -z "$pfiles" ] || cat $pfiles|awk '{if($0&&!($0 in seen)){seen[$0]=1;print$0}}'
			cat<<-'EOF'
			 redistribute static
			 redistribute connected
			 redistribute ripng
			default-information originate
			!
			line vty
			 no exec-timeout
			!
			! vim: ft=uil tw=64 com=\:!!,\:! fo+=tcqlorn
			EOF
		}>$temp
		if [ -e $conf ]; then
			if ! diff $temp $conf &>/dev/null; then
				cp -pf -- $temp $conf
				systemctl reload-or-try-restart $unit
			fi
		else
			cp -pf -- $temp $conf
			systemctl reload-or-restart $unit
		fi
		rm -f -- $temp
	else
		systemctl stop $unit
		if [ -s $save ]; then
			cp -pf -- $save $conf
		else
			rm -f -- $conf
		fi
		rm -f -- $save
	fi
}

unit_remove ()
{
	local f existing=
	for f in $unit_dir/${1}_*; do
		[ -e $f ] || continue
		existing=yes
		break
	done
	if [ -n "$existing" ]; then
		rm -f -- $unit_dir/${1}_*
		unit_rebuild_config
	fi
}

unit_test_ipv6_addr ()
{
	:
}

unit_add ()
{
	local addr iface passive= scopes= area ntype cost
	for addr in $3; do
		scopes="${scopes:+$scopes }$(unit_test_ipv5_addr $addr)"
	done
	syslog debug "Scopes are: '$scopes'"
	case " $scopes " in
	*" public "*)		iface="$DEVICE_IP_IFACE"; passive= ; cost=200 ;;
	*" unexicon "*)		iface="$DEVICE_IP_IFACE"; passive= ; cost=300 ;;
	*" private "*)		iface="$DEVICE_IP_IFACE"; passive='no '; cost=100 ;;
	*" linklocal "*)	iface="$DEVICE_IP_IFACE"; passive='no '; cost=10 ;;
	*" multicast "*|*" reserved "*|*" default "*|*)
				unit_remove $@; return 0 ;;
	esac
	[ $4 -eq 1 ] && iface=
	syslog debug "iface='$iface' passive='$passive' cost='$cost'"
	case "$iface" in
	"") unit_remove $@; return 0 ;;
	tun*|ppp*) passive= ; ntype=point-to-point ;;
	*) [ -n "$5" ] && ntype=broadcast ;;
	esac
	echo "interface $iface" >$unit_dir/${1}_interface
	[ -z "$cost"  ] || echo " ip ospf cost $cost" >>$unit_dir/${1}_interface
	[ -z "$ntype" ] || echo " ip ospf network $ntype" >>$unit_dir/${1}_interface
	[ -z "$prio"  ] || echo " ip ospf priority $prio" >>$unit_dir/${1}_interface
	echo " ${passive}passive-interface $iface" >$unit_dir/${1}_passive
	cat /dev/null >$unit_dir/${1}_network
	cat /dev/null >$unit_dir/${1}_area
	for addr in $3; do
		subnet=$(echo $addr|awk '{if($1)print$1}')
		gatewy=$(echo $addr|awk '{if($2)print$2}')
		case "$(unit_test_ipv6_addr $addr)" in
		public)		[ -z "$subnet" ] || echo " network $subnet area 0.0.0.0" >>$unit_dir/${1}_network
				[ -z "$subnet" ] || echo " area 0.0.0.0 range $subnet" >>$unit_dir/${1}_area ;;
		private)	[ -z "$subnet" ] || echo " network $subnet area 10.0.0.0" >>$unit_dir/${1}_network
				[ -z "$subnet" ] || echo " area 10.0.0.0 range $subnet" >>$unit_dir/${1}_area ;;
		unexicon)	[ -z "$subnet" ] || echo " network $subnet area 10.55.7.0" >>$unit_dir/${1}_network
				[ -z "$subnet" ] || echo " area 10.55.7.0 range $subnet" >>$unit_dir/${1}_area ;;
		default|loopback|linklocal|reserved|multicast|*) ;;
		esac
	done
	if [ -n "$6" ]; then
		subnet="$6/$7"
		case "$(unit_test_ipv6_addr $subnet)" in
		public)		echo " network $subnet area 0.0.0.0" >>$unit_dir/${1}_network
				echo " area 0.0.0.0 range $subnet" >>$unit_dir/${1}_area ;;
		private)	echo " network $subnet area 10.0.0.0" >>$unit_dir/${1}_network
				echo " area 10.0.0.0 range $subnet" >>$unit_dir/${1}_area ;;
		unexicon)	echo " network $subnet area 10.55.7.0" >>$unit_dir/${1}_network
				echo " area 10.55.7.0 range $subnet" >>$unit_dir/${1}_area ;;
		default|loopback|linklocal|reserved|multicast|*) ;;
		esac
	fi
	unit_rebuild_config
}

unit_nm_add ()
{
	local i addr addresses=
	for ((i=0;i<IP6_NUM_ADDRESSES;i++)); do
		eval "addr=\"\$IP6_ADDRESS_$i\""
		addresses="${addresses:+$addresses }$addr"
	done
	unit_add "$1" "$DEVICE_IP_IFACE" "$addresses" "$DHCP6_IFWIRELESS" "$DHCP6_BROADCAST_ADDRESS" "$DHCP6_NETWORK_NUMBER" "$DHCP6_SUBNET_CIDR"
}

unit_nm_rmv ()
{
	unit_remove $@
}

unit_nm_cha ()
{
	if [ -n "$DEVICE_IP_IFACE" ]; then
		unit_nm_add $@
	else
		unit_nm_rmv $@
	fi
}

# Network manager up command
unit_nm_up ()
{
	syslog debug "Responding to NM up command."
	unit_nm_add $@
}

# Network manager down command
unit_nm_down ()
{
	syslog debug "Responding to NM down command."
	unit_nm_rmv $@
}

# Network manager vpn-up command
unit_nm_vpn-up ()
{
	syslog debug "Responding to NM vpn-up command."
	unit_nm_add $@
}

# Network manager vpn-down command
unit_nm_vpn-down ()
{
	syslog debug "Responding to NM vpn-down command."
	unit_nm_rmv $@
}

# Network manager dhcp4-change command
unit_nm_dhcp4-change ()
{
	syslog debug "Responding to NM dhcp4-change command."
	unit_nm_cha $@
}

# Network manager dhcp6-change command
unit_nm_dhcp6-change ()
{
	syslog debug "Responding to NM dhcp6-change command."
	unit_nm_cha $@
}

# Network manager hostname command
unit_nm_hostname ()
{
	syslog debug "Responding to NM hostname command."
	:
}

unit_ppp_add ()
{
	:
}

unit_ppp_rmv ()
{
	unit_remove $@
}

# PPP daemon ip-up command
unit_ppp_ip-up ()
{
	unit_ppp_add $@
}

# PPP daemon ip-down command
unit_ppp_ip-down ()
{
	unit_ppp_rmv $@
}

# PPP daemon ipv6-up command
unit_ppp_ipv6-up ()
{
	unit_ppp_add $@
}

# PPP daemon ipv6-down command
unit_ppp_ipv6-down ()
{
	unit_ppp_rmv $@
}

unit_dhcp_add ()
{
	unit_add "$1" "$1" "$new_ip_address" "$ifwireless" "$new_broadcast_address" "$network_number" "$subnet_cidr"
}

unit_dhcp_rmv ()
{
	unit_remove $@
}

# DHCP client daemon hook command
unit_dhcpcd_hook ()
{
	case "$reason" in
	(PREINIT|CARRIER|INFORM|BOUND|RENEW|REBIND|REBOOT|IPV4LL|STATIC|3RDPARTY|TIMEOUT)
		unit_dhcp_add $interface ;;
	(EXPIRE|RELEASE|NAK|NOCARRIER|FAIL|STOP)
		unit_dhcp_rmv $interface ;;
	(DUMP|TEST|ROUTERADVERT)
		;;
	esac
}

# We just put this script in /etc/NetworkManager/dispatcher.d
# and then symbolic link it from /etc/ppp/ip{v6}-{up|down}.d/
# directories.  So, we decide what to do based on how we were
# called.

syslog debug "Dispatcher $dispatcher invoked."

case "$dispatcher" in
	(*/dispatcher.d/*)
		syslog debug "Invoked as dispatcher."
		case "$2" in
		(up)		unit_nm_up		$@ ;;
		(down)		unit_nm_down		$@ ;;
		(vpn-up)	unit_nm_vpn-up		$@ ;;
		(vpn-down)	unit_nm_vpn-down	$@ ;;
		(dhcp4-change)	unit_nm_dhcp4-change	$@ ;;
		(dhcp6-change)	unit_nm_dhcp6-change	$@ ;;
		(hostname)	unit_nm_hostname	$@ ;;
		esac
		;;
	(*/ip-up.d/*)		unit_ppp_ip-up		$@ ;;
	(*/ip-down.d/*)		unit_ppp_ip-down	$@ ;;
	(*/ipv6-up.d/*)		unit_ppp_ipv6-up	$@ ;;
	(*/ipv6-down.d/*)	unit_ppp_ipv6-down	$@ ;;
	(*/dhcpcd-run-hooks)	unit_dhcpcd_hook	$@ ;;
esac


[Unit]
Description=avahi-autoipd on %I
Wants=network.target
Before=network.target
BindTo=sys-subsystem-net-devices-%i.device
After=sys-subsystem-net-devices-%i.device
IgnoreOnIsolate=yes

[Service]
Type=forking
PIDFile=/run/avahi-autoipd.%I.pid
ExecStart=/usr/sbin/avahi-autoipd -D %I
ExecReload=/usr/sbin/avahi-autoipd -r %I
ExecStop=/usr/sbin/avahi-autoipd -k %I
Restart=always
RestartSec=0

[Install]
WantedBy=multi-user.target
